# don't put duplicate lines or lines starting with space in the history.
# See bash(1) for more options
HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=1000
HISTFILESIZE=2000

EDITOR=emacs

eval "$(zoxide init bash)"
eval "$(fzf --bash)"
eval "$(direnv hook bash)"

# Created by `pipx` on 2024-11-20 17:53:28
export PATH="$PATH:/data/data/com.termux/files/home/.local/bin"

eval "$(starship init bash)"

# Functions
cfzf() {
  fzf_command=("fzf")
  if [ -n "$1" ]; then
    fzf_command=($fzf_command "--query=$1" "-1")
  fi

  file_path=$(chezmoi managed --include=files | ${fzf_command[@]})
  if [ -z "$file_path" ]; then
    >&2 echo "No file selected"
  else
    chezmoi edit --apply "$HOME/$file_path"
  fi
}

